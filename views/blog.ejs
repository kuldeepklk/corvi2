<script>
$("#submitForm").validate({
	  rules: {
		full_name:{
		  required: true,
		  minlength: 2
		},
		email: {
			required: true,
			email: true,
		}
	},
	messages: {
		full_name: {
		  required:"Please specify your full name",
		  minlength:"Your first name must contain atleast 2 charecters"
		},
		email: {
		  required: "We need your email address to contact you",
		  email: "Your email address must be in the format of name@domain.com"
		}
	},
	submitHandler: function(form) {
		var FormOptions = {
			beforeSubmit : function() {
				//$( "body" ).scrollTop(300);
				$(".alert-danger").hide();
				$(".alert-warning").slideDown().html("Please wait...");
				$(".alert-success").hide();
			},
			success : function(data) {
				if(data == 'valid'){
					$(".alert-danger").hide();
					$(".alert-warning").hide();
					$("#submitForm")[0].reset();
					$(".alert-success").slideDown().html("Thank You!");
					setTimeout(function(){
						$(".alert-success").slideUp();
					}, 3000);
					
				}else{
					$(".alert-danger").slideDown().html(data);
					$(".alert-warning").hide();
					$(".alert-success").hide();
				}
			},
			error : function(){
				$(".alert-warning").hide();
				$(".alert-success").hide();
				$(".alert-danger").slideDown().html("Please try again later!");
			}
		};
		$(form).ajaxSubmit(FormOptions);
	}
  });
</script>
